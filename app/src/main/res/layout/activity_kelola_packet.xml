<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/page_crop_kelola_paket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="gone"
        android:orientation="vertical">

        <com.oginotihiro.cropview.CropView
            android:id="@+id/crop_view_kelola_paket"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_crop_kelola_paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@drawable/button_click"
                android:backgroundTint="@color/colorButton"
                android:minHeight="0dp"
                android:padding="14dp"
                android:layout_marginEnd="16dp"
                android:text="@string/crop"/>

            <Button
                android:id="@+id/bt_cancel_crop_kelola_paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:background="@drawable/button_click"
                android:backgroundTint="@color/colorGrey"
                android:minHeight="0dp"
                android:padding="14dp"
                android:text="@string/batal"/>

        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Activity.KelolaPacket">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name_paket_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@string/name_packet"/>

                <TextView
                    android:id="@+id/max_participant_title"
                    android:layout_width="match_parent"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/max_participant"/>
                <TextView
                    android:id="@+id/price_title"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="@string/price"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/nama_event"/>

                <EditText
                    android:id="@+id/name_event_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:paddingLeft="16dp"
                    android:hint="@string/nama_event"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/deskripsi"/>

                <EditText
                    android:id="@+id/deskripsi_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:hint="@string/deskripsi"
                    android:inputType="textMultiLine"
                    android:paddingLeft="16dp"
                    android:scrollbars="vertical"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/tempat"/>

                <EditText
                    android:id="@+id/tempat_event_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:paddingLeft="16dp"
                    android:hint="@string/tempat"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/alamat"/>

                <EditText
                    android:id="@+id/alamat_event_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:paddingLeft="16dp"
                    android:hint="@string/alamat"
                    android:inputType="text"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingRight="8dp"
                        android:textSize="12sp"
                        android:text="@string/start_event"/>
                    <Button
                        android:id="@+id/bt_start_date"
                        android:background="@drawable/ic_date_range_black_24dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/start_event_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:paddingLeft="16dp"
                    android:hint="@string/start_event"
                    android:inputType="date"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingRight="8dp"
                        android:textSize="12sp"
                        android:text="@string/end_event"/>
                    <Button
                        android:id="@+id/bt_end_date"
                        android:background="@drawable/ic_date_range_black_24dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/end_event_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:paddingLeft="16dp"
                    android:hint="@string/end_event"
                    android:inputType="date"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingRight="8dp"
                    android:textSize="12sp"
                    android:text="@string/jenis_absensi"/>

                <Spinner
                    android:id="@+id/spinner_presensi"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:dropDownWidth="wrap_content"
                    android:padding="8dp"
                    android:entries="@array/presensi"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/nama_sesi"/>

                <EditText
                    android:id="@+id/session_event_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:paddingLeft="16dp"
                    android:hint="@string/nama_sesi"
                    android:inputType="text"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingEnd="8dp"
                        android:textSize="12sp"
                        android:text="@string/start_session"/>
                    <Button
                        android:id="@+id/bt_start_session_date"
                        android:background="@drawable/ic_date_range_black_24dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/start_session_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:paddingStart="16dp"
                    android:hint="@string/start_session"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/name_team"/>

                <EditText
                    android:id="@+id/name_team_event_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:paddingLeft="16dp"
                    android:hint="@string/name_team"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingRight="8dp"
                    android:textSize="12sp"
                    android:text="@string/banner"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_banner"
                        android:layout_width="100dp"
                        android:src="@drawable/ic_image_black_24dp"
                        android:paddingRight="8dp"
                        android:layout_height="100dp"/>
                    <Button
                        android:id="@+id/add_img_banner_event"
                        android:layout_width="wrap_content"
                        android:text="@string/upload"
                        android:minHeight="0dp"
                        android:padding="14dp"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/colorButton"
                        android:background="@drawable/button_click"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/harga_tiket"/>

                <EditText
                    android:id="@+id/price_event_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_form"
                    android:paddingLeft="16dp"
                    android:hint="@string/harga_tiket"
                    android:inputType="number"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/bt_pilih_paket"
                    android:layout_width="match_parent"
                    android:minHeight="0dp"
                    android:padding="14dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_click"
                    android:backgroundTint="@color/colorButton"
                    android:textColor="@android:color/white"
                    android:text="@string/choose_packet"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
