<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:paddingLeft="16dp"
            android:id="@+id/timeAgendaPanitia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            tools:text="08.30 WIB"/>

        <com.github.vipulasri.timelineview.TimelineView
            android:id="@+id/timeline"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:lineOrientation="vertical"
            app:marker="@drawable/icon_marker"
            app:markerInCenter="false"
            app:lineWidth="5dp"
            app:lineStyle="normal"
            app:startLineColor="@color/colorBabyBlue"
            app:endLineColor="@color/colorBabyBlue"/>

        <TextView
            android:id="@+id/judulAgendaPanitia"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="judul"/>

    </LinearLayout>
